{
  "openapi": "3.0.1",
  "info": {
    "title": "Arquitectura_DDD",
    "version": "1.0"
  },
  "paths": {
    "/api/Pedidos": {
      "post": {
        "tags": [
          "Pedidos"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CrearPedidoRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CrearPedidoRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CrearPedidoRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Pedidos/{id}/pago": {
      "post": {
        "tags": [
          "Pedidos"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConfirmarPagoRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ConfirmarPagoRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ConfirmarPagoRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Pedidos/{id}/cancelar": {
      "put": {
        "tags": [
          "Pedidos"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CancelarPedidoRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CancelarPedidoRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CancelarPedidoRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Pedidos/{id}": {
      "get": {
        "tags": [
          "Pedidos"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CancelarPedidoRequestDto": {
        "required": [
          "motivo",
          "pedidoId"
        ],
        "type": "object",
        "properties": {
          "pedidoId": {
            "type": "string",
            "format": "uuid"
          },
          "motivo": {
            "maxLength": 500,
            "minLength": 10,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ConfirmarPagoRequestDto": {
        "required": [
          "numeroReferencia",
          "pedidoId",
          "proveedor",
          "tipoPago"
        ],
        "type": "object",
        "properties": {
          "pedidoId": {
            "type": "string",
            "format": "uuid"
          },
          "tipoPago": {
            "minLength": 1,
            "type": "string"
          },
          "proveedor": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "numeroReferencia": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "CrearDetallePedidoDto": {
        "required": [
          "cantidad",
          "nombreProducto",
          "precioUnitario",
          "productoId"
        ],
        "type": "object",
        "properties": {
          "productoId": {
            "type": "string",
            "format": "uuid"
          },
          "nombreProducto": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "cantidad": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "precioUnitario": {
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "CrearPedidoRequestDto": {
        "required": [
          "clienteId",
          "detalles"
        ],
        "type": "object",
        "properties": {
          "clienteId": {
            "type": "string",
            "format": "uuid"
          },
          "detalles": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CrearDetallePedidoDto"
            }
          }
        },
        "additionalProperties": false
      }
    }
  }
}